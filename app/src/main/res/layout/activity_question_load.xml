<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionLoadActivity"
    android:orientation="vertical"
    android:background="#f0f3f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBtnQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/back_btn" />
        <TextView
            android:id="@+id/qnoQLA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:layout_toStartOf="@id/exitBtnQQ"
            android:layout_toEndOf="@id/backBtnQQ"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/exitBtnQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exit_to_app"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBarQQ"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="false"
        android:maxHeight="12dp"
        android:minHeight="12dp"
        android:backgroundTint="#f0f3f5"
        android:max="10"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginBottom="25dp"
        android:progress="10"
        android:progressTint="@color/teal_700"
        />
<LinearLayout
    android:id="@+id/llCardViewQLA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/ques_QQC"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/ques_QQT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/question"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColorHint="@color/black" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/optA_QQC"
        app:cardCornerRadius="10dp"
        android:background="@color/bteal"
        app:cardElevation="5dp"
        android:backgroundTint="@color/bteal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/optA_QQT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/question"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColorHint="@color/black" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/optB_QQC"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:backgroundTint="@color/bteal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/optB_QQT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/question"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColorHint="@color/black" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/bteal"
        android:id="@+id/optC_QQC"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/optC_QQT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/question"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColorHint="@color/black" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/bteal"
        android:id="@+id/optD_QQC"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/optD_QQT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/question"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColorHint="@color/black" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/bteal"
        android:id="@+id/optE_QQC"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/optE_QQT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/question"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColorHint="@color/black" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/bteal"
        android:id="@+id/optF_QQC"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/optF_QQT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/question"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColorHint="@color/black" />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/nextQLA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:text="@string/next"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/teal_700"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        />
</LinearLayout>
</LinearLayout>